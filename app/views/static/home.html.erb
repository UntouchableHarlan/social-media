<% if current_user %>
<div class="container">
  Welcome <%= link_to "#{current_user.first_name}", current_user %> | <%= link_to "Log Out", logout_path %>
</div>
<div class="container">
  <%= link_to 'New Post', new_user_micropost_path(current_user) %>
</div>
<div class="container">
  <% @microposts.each do |f| %>
  <p>
    <%= f.user.first_name %>: <%= f.content %>
  </p>
  <% end %>
</div>
<% else %>
<div class="container">
  <%= "Biggie for Life "%>
  <%= link_to "Sign Up", signup_path %>
</div>
<% end %>
